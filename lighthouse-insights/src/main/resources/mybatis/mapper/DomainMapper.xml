<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dtstep.lighthouse.insights.dao.DomainDao">

    <resultMap id="domainResultMap" type="com.dtstep.lighthouse.insights.modal.Domain">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.dtstep.lighthouse.insights.modal.Domain" >
        INSERT INTO ldp_domains (`name`,`create_time`,`update_time`) VALUES
        (
            #{name,jdbcType=VARCHAR},
            #{createTime,jdbcType=TIMESTAMP},
            #{updateTime,jdbcType=TIMESTAMP}
        )
    </insert>

    <select id="queryById" resultMap="domainResultMap">
        SELECT `id`,`name`,`create_time`,`update_time` FROM ldp_domains WHERE id = #{id}
    </select>

    <select id="queryDefault" resultMap="domainResultMap">
        SELECT `id`,`name`,`create_time`,`update_time` FROM ldp_domains order by create_time desc limit 1
    </select>

</mapper>