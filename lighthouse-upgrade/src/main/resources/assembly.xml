<assembly>
    <id>deploy</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.parent.basedir}/bin</directory>
            <excludes>
                <exclude>**/config/**</exclude>
            </excludes>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/lighthouse-assembly/target/lib/</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/temporary</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/temporary</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/light-webapps</directory>
            <excludes>
                <exclude>/node_modules/**</exclude>
                <exclude>/node/**</exclude>
            </excludes>
            <includes>
                <include>/build/**</include>
            </includes>
            <outputDirectory>/light-webapps</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/lighthouse-upgrade</directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>